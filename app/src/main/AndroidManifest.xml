<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dreaming.bluetooth">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.dreaming.bluetooth.MyApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dreaming.bluetooth.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--<activity-->
            <!--android:name=".WaveActivity" />-->

        <activity android:name="com.dreaming.bluetooth.DeviceDetailActivity" />

        <activity android:name="com.dreaming.bluetooth.CharacterActivity" />

        <activity android:name="com.dreaming.bluetooth.TestActivity1" />

    </application>

</manifest>
